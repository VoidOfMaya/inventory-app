<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>home</title>
    <link rel="stylesheet" href="/styles.css">
    <script src="/ctgry-index.js" defer></script>
</head>
<body>
    <%- include("partials/top-nav.ejs") %>
    <section class="category-container">
        <h1 class="title">category page</h1>
        <div class="add-btn" id="ctgry-btn" aria-label="create new category button"> Create new category!</div>
        <% category.forEach(card => { %>
            <div class="ctgry-card">
                <div style="padding: 20px;">
                    <%= card.name %>     
                </div>
                        
                <div id="card-options">
                    <a href="/Category/<%= card.id %>" style="margin-right: 20px; color: white;">edit</a>
                    <a href="/Category/<%= card.id %>/Delete" style="color: white;">delete</a>        
                </div>  
                
            </div>

        <% }) %>
    </section>
    <dialog id="ctgry-dlg">
        <h2>Create new category</h2>
        <form method="post" action="/Category" class="ctgry-create-container">
            
            <label for="ctgyName">Name: </label>
            <input id="ctgyName" name="ctgyName" type="text" placeholder="canned food" required>
            
            <button> + add item</button>
            <button type="button" id="dlg-exit">close</button>
        </form>
    </dialog>
</body>
</html>