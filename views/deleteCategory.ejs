<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>delete category</title>
    <link rel="stylesheet" href="/styles.css">
    <script src="/index.js" defer></script>
</head>
<body>
    <%- include("partials/top-nav.ejs") %>
    <section class="ctgry-delete-container">
        <h1 class="title">delete category <%= category.name %></h1>
        <div class="ctgry-delete-buttons-container">
            <button onclick="deleteCategory( <%= category.id %> )"> Delete!</button>          
            <button onclick="window.location.href= '/Category';">cancel</button>            
        </div>

    </section>
    <script>
        const deleteCategory = (id) =>{
            const confirmed = confirm('are you sure you want to proceed with deleting this category?');

            if(!confirmed) return;

            fetch(`/Category/${id}/Delete/`, {method: 'DELETE'})
            .then(async res =>{
             if(res.ok){
                alert('delete was successfull');
                window.location.href='/Category';
             }
             console.log(`result: ${res}`)
            })
            .catch(err =>{
                
                console.log(err);
            });
        }
    </script>
</body>
</html>